@model IEnumerable<Sales_Web.Models.SalesProduct>

@{
    ViewData["Title"] = "Sales Products";
}

<div class="container mt-4">
    <h1 class="mb-4">Sales Products</h1>

    <p>
        <a class="btn btn-primary" asp-action="Create">Create New</a>
    </p>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.SalesId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ProductsId)
                    </th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.SalesId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ProductsId)
                        </td>
                        <td class="text-center">
                            <a class="btn btn-icon" asp-action="Edit" asp-route-id="@item.Id" title="Edit">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a class="btn btn-icon" asp-action="Details" asp-route-id="@item.Id" title="Details">
                                <i class="fas fa-info-circle"></i>
                            </a>
                            <a class="btn btn-icon" asp-action="Delete" asp-route-id="@item.Id" title="Delete">
                                <i class="fas fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<style>
    .btn-icon {
        background-color: #f0f0f0; /* Color gris claro */
        color: #333; /* Color de los iconos */
        border: none; /* Elimina el borde del botón */
        padding: 8px; /* Ajusta el relleno si es necesario */
        border-radius: 4px; /* Bordes redondeados */
        font-size: 16px; /* Tamaño de fuente de los iconos */
        margin: 0 2px; /* Espaciado entre los botones */
        text-decoration: none; /* Elimina el subrayado del enlace */
        display: inline-flex; /* Alinea los iconos verticalmente en el centro */
        align-items: center; /* Centra verticalmente el icono */
        justify-content: center; /* Centra horizontalmente el icono */
    }

        .btn-icon:hover {
            background-color: #e0e0e0; /* Color gris más oscuro al pasar el mouse */
        }
</style>

