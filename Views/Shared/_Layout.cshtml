<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sales_Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Sales_Web.styles.css" asp-append-version="true" />
    <style>
        body {
            padding-top: 56px; /* Ajusta el espacio para el navbar fijo */
        }

        .sidebar {
            height: 100vh; /* Altura completa de la ventana */
            position: fixed; /* Fijo en la pantalla */
            top: 0;
            left: 0;
            width: 250px; /* Ancho del sidebar */
            background-color: #495057; /* Color de fondo del sidebar */
            border-right: 1px solid #ddd; /* Borde derecho del sidebar */
            padding-top: 20px; /* Espacio superior dentro del sidebar */
        }

            .sidebar .greeting {
                color: #fff; /* Color del texto: blanco */
                text-align: center; /* Centrar el texto horizontalmente */
                font-size: 1.2rem; /* Tamaño de fuente del texto: 4.2 rem */
                margin-bottom: 10px; /* Espacio debajo del texto: 10 píxeles */
            }


            .sidebar .avatar {
                width: 100px; /* Ancho del avatar */
                height: 100px; /* Alto del avatar */
                border-radius: 50%; /* Hacer la imagen redonda */
                display: block;
                margin: 0 auto; /* Centrar el avatar */
                border: 2px solid #ddd; /* Borde alrededor del avatar */
                object-fit: cover; /* Ajustar la imagen para que no se deforme */
            }

            .sidebar .nav {
                margin-top: 20px; /* Espacio debajo del avatar */
            }

        .main-content {
            margin-left: 300px; /* Espacio para el sidebar */
            padding: 20px; /* Espacio dentro del contenido principal */
        }

        footer {
            border-top: 1px solid #ddd;
            padding: 10px;
            text-align: center;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Sales_Web</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home"></i>
                            </a>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Sales" asp-action="Index">Accountig</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Sales" asp-action="Create">Sales Requests</a>

                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Products" asp-action="Index">Products</a>
                        </li>
                        
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Users" asp-action="Index">Users</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <div class="d-flex">
        <nav class="sidebar">
            <br />    <br />  <br />
            <p class="greeting">Welcome</p> <!-- Párrafo que dice "Hola" -->
            <img src="~/user-profile.png" alt="User Avatar" class="avatar" />
            <ul class="nav flex-column">
                <!-- Agrega más enlaces aquí según sea necesario -->
            </ul>


            @if (User.Identity.IsAuthenticated)
            {
                <br /> <br /> <br />
                <a href="/Identity/Account/Manage" class="d-block bg-secondary text-light p-3 rounded text-decoration-none">
                    <p class="greeting mb-0">
                        <i class="fas fa-user"></i> Profile
                    </p>
                </a>


            }
            else
            {
             
            }

           

        </nav>

        <div class="main-content">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>

    <footer class="border-top footer text-muted mt-auto">
        <div class="container">
            &copy; 2024 - Sales_Web - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
<!-- FontAwesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
